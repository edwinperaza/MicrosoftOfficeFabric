<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.microsoftapplication">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!--Launch Screen: We use AppTheme.Launcher for the theme instead of AppTheme in order to load the app with a launch screen-->
        <activity
                android:name="com.example.microsoftapplication.DemoListActivity"
                android:label="@string/app_title"
                android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Demo activities -->
        <activity android:name="com.example.microsoftapplication.demos.AvatarViewActivity" />
        <activity android:name="com.example.microsoftapplication.demos.BasicInputsActivity" />
        <activity android:name="com.example.microsoftapplication.demos.BottomSheetActivity" />
        <activity android:name="com.example.microsoftapplication.demos.CalendarViewActivity" />
        <activity android:name="com.example.microsoftapplication.demos.DateTimePickerDialogActivity" />
        <activity android:name="com.example.microsoftapplication.demos.DrawerActivity" />
        <activity android:name="com.example.microsoftapplication.demos.ListItemViewActivity" />
        <activity
                android:name="com.example.microsoftapplication.demos.PeoplePickerViewActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.example.microsoftapplication.demos.PersonaChipViewActivity" />
        <activity android:name="com.example.microsoftapplication.demos.PersonaListViewActivity" />
        <activity android:name="com.example.microsoftapplication.demos.PersonaViewActivity" />
        <activity android:name="com.example.microsoftapplication.demos.ProgressActivity" />
        <activity android:name="com.example.microsoftapplication.demos.SnackbarActivity" />
        <activity android:name="com.example.microsoftapplication.demos.TemplateViewActivity" />
        <activity android:name="com.example.microsoftapplication.demos.TooltipActivity" />
        <activity android:name="com.example.microsoftapplication.demos.TypographyActivity" />

    </application>

</manifest>